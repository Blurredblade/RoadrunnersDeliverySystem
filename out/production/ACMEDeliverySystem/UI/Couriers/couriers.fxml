<?xml version="1.0" encoding="UTF-8"?>

<!-- Couriers Tab -->

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.Couriers.CourierController">
    <children>
        <Button fx:id="addCourierBtn" layoutX="272.0" layoutY="89.0" mnemonicParsing="false" onAction="#newCourier" text="New Courier" />
        
        <Button fx:id="editCourierBtn" disable="true" layoutX="272.0" layoutY="424.0" mnemonicParsing="false" onAction="#editCourier" prefHeight="25.0" prefWidth="93.0" text="Edit Courier" />
        <Button fx:id="courierReportBtn" disable="true" layoutX="376.0" layoutY="424.0" mnemonicParsing="false" onAction="#getReport" prefHeight="25.0" prefWidth="93.0" text="Get Report" />
        <Button fx:id="deleteCourierbtn" disable="true" layoutX="272.0" layoutY="460.0" mnemonicParsing="false" onAction="#deleteCourier" text="Delete Courier" />
        <Label layoutX="431.0" layoutY="25.0" text="Couriers">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <CheckBox fx:id="inactiveCouriers" layoutX="506.0" layoutY="428.0" mnemonicParsing="false" onAction="#toggle" text="Display Inactive Couriers" />
      <TableView fx:id="courierTable" layoutX="272.0" layoutY="125.0" prefHeight="276.0" prefWidth="385.0">
        <columns>
          
        </columns>
      </TableView>
      <Button fx:id="addCourierBtn1" layoutX="575.0" layoutY="89.0" mnemonicParsing="false" onAction="#refreshTable" prefHeight="25.0" prefWidth="82.0" text="Refresh" />
    </children>
</AnchorPane>
