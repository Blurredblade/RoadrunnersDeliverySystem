<?xml version="1.0" encoding="UTF-8"?>

<!-- Customers Tab -->

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.Customers.CustomerController">
    <children>
        <Label layoutX="367.0" layoutY="22.0" text="Customers">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Button fx:id="addcustomerBtn" layoutX="79.0" layoutY="49.0" mnemonicParsing="false" onAction="#newCustomer" text="New Customer" />
        <TableView fx:id="customerTable" layoutX="81.0" layoutY="80.0" prefHeight="294.0" prefWidth="693.0">
            <columns>

            </columns>
        </TableView>
        <Button fx:id="editcustomerBtn" layoutX="81.0" layoutY="387.0" mnemonicParsing="false" onAction="#editCustomer" text="Edit Customer" />
        <Button fx:id="singleBillBtn" layoutX="81.0" layoutY="427.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="91.0" text="Generate Bill" />
        <Button fx:id="deletecustomerbtn" layoutX="197.0" layoutY="387.0" mnemonicParsing="false" onAction="#deleteCustomer" text="Delete Customer" />
        <Button fx:id="allBillBtn" layoutX="197.0" layoutY="427.0" mnemonicParsing="false" text="Generate All Bills" />
        <CheckBox fx:id="inactiveCustomers" layoutX="602.0" layoutY="391.0" mnemonicParsing="false" onAction="#toggle" text="Display Inactive Customers" />
      <Button layoutX="683.0" layoutY="49.0" mnemonicParsing="false" onAction="#refreshTable" prefHeight="25.0" prefWidth="91.0" text="Refresh" />
    </children>
</AnchorPane>
