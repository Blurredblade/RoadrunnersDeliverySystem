<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.Order.NewOrder.NewOrderController">
   <HBox alignment="TOP_CENTER" layoutX="116.0" layoutY="78.0">
      <children>
         <Label text="Pickup Customer:">
            <HBox.margin>
               <Insets right="50.0" top="3.0" />
            </HBox.margin>
            <padding>
               <Insets right="5.0" />
            </padding>
         </Label>
         <ComboBox fx:id="PickupSelection" prefHeight="25.0" prefWidth="220.0" promptText="Select a Pickup Customer" />
      </children>
   </HBox>
   <HBox layoutX="115.0" layoutY="113.0">
      <children>
          <Label text="Delivery Customer:">
            <HBox.margin>
               <Insets right="50.0" top="3.0" />
            </HBox.margin>
         </Label>
         <ComboBox fx:id="DeliverySelection" prefHeight="25.0" prefWidth="220.0" promptText="Select a Delivery Customer" />
      </children>
   </HBox>
    <Label layoutX="256.0" layoutY="14.0" text="New Order" />
    <Button layoutX="238.0" layoutY="157.0" onAction="#newCustomer" text="New Customer" />
    <Button layoutX="207.0" layoutY="557.0" onAction="#Create" text="Create" />
    <Button layoutX="313.0" layoutY="557.0" onAction="#Cancel" text="Cancel" />
   <HBox layoutX="179.0" layoutY="202.0">
      <children>
          <Label text="Pickup Time:">
            <HBox.margin>
               <Insets right="100.0" top="3.0" />
            </HBox.margin>
         </Label>
         <TextField fx:id="time" prefWidth="45.0" promptText="00:00" />
      </children>
   </HBox>
   <HBox layoutX="78.0" layoutY="246.0">
      <children>
          <Label text="Special Instructions:">
            <HBox.margin>
               <Insets right="50.0" />
            </HBox.margin>
         </Label>
          <TextArea fx:id="SpecialInstructions" prefHeight="181.0" prefWidth="267.0" promptText="Enter special instructions here" wrapText="true" />
      </children>
   </HBox>
   <VBox layoutX="253.0" layoutY="449.0">
      <children>
          <Label text="Bill To:">
            <padding>
               <Insets bottom="10.0" />
            </padding>
         </Label>
          <RadioButton fx:id="pick" selected="true" text="Delivery">
            <padding>
               <Insets bottom="10.0" />
            </padding>
            <toggleGroup>
               <ToggleGroup fx:id="billTo" />
            </toggleGroup>
         </RadioButton>
          <RadioButton fx:id="del" text="Pickup" toggleGroup="$billTo">
    </RadioButton>
      </children>
   </VBox>
   <ComboBox fx:id="timeSelection" layoutX="409.0" layoutY="202.0" prefHeight="25.0" prefWidth="67.0" />
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
</AnchorPane>
